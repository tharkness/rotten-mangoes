<div class="container myBackground">
<%= form_for @movie, :html => {:multipart => true, class: "form-group" } do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li> <%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, class: 'row-sm-2 control-label' %><br>
    <div class="row-sm-10">
      <%= f.text_field :title, class: 'form-control' %><br/>
  </div>
  <div class="form-group">
    <%= f.label :release_date, class: 'row-sm-2 control-label' %><br/>
    <div class="row-sm-10">
      <%= f.date_field :release_date, class: 'form-control' %><br/>
  </div>
  <div class="form-group">
    <%= f.label :director, class: 'row-sm-2 control-label' %><br>
    <div class="row-sm-10">
      <%= f.text_field :director, class: 'form-control' %><br/>
  </div>
  <div class="form-group">
    <%= f.label :runtime_in_minutes, class: 'row-sm-2 control-label' %><br>
    <div class="row-sm-10">
      <%= f.number_field :runtime_in_minutes, class: 'form-control' %><br/>
  </div>
  <div class="form-group">
    <%= f.label :poster, class: 'row-sm-2 control-label' %><br/>
    <div class="row-sm-10">
      <%= f.file_field :poster %>
  </div>
  <div class="form-group">
    <%= f.label :remote_poster_url, "or image URL", class: 'row-sm-2 control-label' %>
    <div class="row-sm-10">
      <%= f.text_field :remote_poster_url, class: 'actions form-control' %><br/>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'row-sm-2 control-label' %><br>
    <div class="row-sm-10">
      <%= f.text_area :description, class: 'form-control' %><br/>
  </div>
  <div class="actions form-group">
    <%= f.submit "Submit" %>
  </div>
<% end %>
</div>