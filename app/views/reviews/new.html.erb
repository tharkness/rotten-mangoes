      <%= pluralize(@review.errors.count, "error") %> prevented the review from being saved:
      <ul>
        <% @reviews.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :text %><br/>
